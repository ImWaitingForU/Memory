<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chan.app.myapplication.RegisterActivity">

    <EditText
        android:id="@+id/et_re_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_re_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_re_pwd"
        android:layout_alignStart="@+id/et_re_pwd"
        android:ems="10"
        android:hint="用户名"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_re_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_re_name"
        android:layout_alignStart="@+id/et_re_name"
        android:ems="10"
        android:hint="邮箱"
        android:inputType="textEmailAddress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/btn_register_ok"
        android:layout_below="@+id/et_re_pwd"
        android:layout_alignEnd="@+id/et_re_pwd"
        android:layout_alignStart="@+id/et_re_pwd" />

</RelativeLayout>
